<Window x:Class="CopyParametersGadgets.WriteValueForScheduleCommand.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NRPUtils.ValueConverters;assembly=NRTUtils"
        xmlns:command="clr-namespace:CopyParametersGadgets.Command"
        d:DataContext="{d:DesignInstance Type=command:VMUserInput}"
        mc:Ignorable="d"
        d:DesignHeight="160"
        d:DesignWidth="300"
        Width="300"
        Height="160"
        ResizeMode="NoResize">
   <Window.Resources>
      <local:IllegalCharactersToUnderscoreConverter x:Key="CharacterReplacer" />
   </Window.Resources>
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition />
         <ColumnDefinition />
         <ColumnDefinition />

      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
         <RowDefinition Height="30" />
         <RowDefinition Height="30" />
         <RowDefinition Height="30" />
         <RowDefinition Height="30" />
      </Grid.RowDefinitions>

      <Label Grid.Column="0"
             Content="Категория" />
      <Label Grid.Column="1"
             Content="Запас" />
      <Label Grid.Column="2"
             Content="Округление"
             ToolTip="Укажите количество знаков после запятой" />

      <Label Grid.Column="0"
             Grid.Row="1"
             Content="Трубы" />
      <Label Grid.Column="0"
             Grid.Row="2"
             Content="Изоляция" />

      <TextBox Grid.Column="1"
               Grid.Row="1"
               Margin="2"
               Text="{Binding PipeSafetyFactor,
            Converter={StaticResource CharacterReplacer}, UpdateSourceTrigger=PropertyChanged}" />
      <TextBox Grid.Column="1"
               Grid.Row="2"
               Margin="2"
               Text="{Binding PipeInsulationSafetyFactor,
            Converter={StaticResource CharacterReplacer}, UpdateSourceTrigger=PropertyChanged}" />
      <TextBox Grid.Column="2"
               Grid.Row="1"
               Margin="2"
               Text="{Binding PipeRound,
            Converter={StaticResource CharacterReplacer}, UpdateSourceTrigger=PropertyChanged}"
               ToolTip="Укажите количество знаков после запятой" />
      <TextBox Grid.Column="2"
               Grid.Row="2"
               Margin="2"
               Text="{Binding InsulationRound,
            Converter={StaticResource CharacterReplacer}, UpdateSourceTrigger=PropertyChanged}"
               ToolTip="Укажите количество знаков после запятой" />

      <Button Grid.Column="2"
              Grid.Row="3"
              Content="Обработать"
              Margin="2"
              Command="{Binding ApplyCommand}" />
   </Grid>
</Window>
